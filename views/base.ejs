
<%-include('header')-%>

<div class="text-center center-div" >
    <div class="container w-25 border py-5">
        <div class="text-center title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span id="login">Login for the existing user</span>
            <% if(locals.logout){%>
                <div class="alter alter-success text-center">
                    <%=logout%>
                </div>
            <%}%>
        </div>
        <form action="/route/login" method="POST">
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="email" required>
                <p class="form-text text-muted text-left" id="register">register email address</p>
            </div>
            <div class="form-group">
                <input type="password" class="form-control " name="password" placeholder="password" required>
            </div>
            <button type="submit" class="btn btn-success mt-4 rounded-pill">Submit</button>
        </form>
    </div>
</div>

<%-include('footer')-%>